os: linux
dist: focal
language: perl
perl:
  - "5.30"

before_install:
  - "sudo apt-get update"
  - "sudo apt-get install -y libdb-dev"
  - "wget  http://cegg.unige.ch/pub/newick-utils-1.6-Linux-x86_64-enabled-extra.tar.gz && tar xvfz newick-utils-1.6-Linux-x86_64-enabled-extra.tar.gz && cd newick-utils-1.6 && ./configure && make && sudo make install"
  - "cpanm --sudo -v --installdeps --notest --cpanfile cpanfile ."

script:
  - "make test"

notifications:
  email:
    on_failure: always
